  <DefaultExperiment startTime="0" stopTime="10" stepSize="0.1"/>

  <ModelVariables>
    <ScalarVariable
        name="x_in"
        valueReference="1"
        description="position of mass connected to left mass"
        variability="continuous"
        causality="output">
      <Real start="-1"/>
    </ScalarVariable>
    <ScalarVariable
        name="x0"
        valueReference="2"
        description="position left mass"
        variability="continuous"
        causality="output">
      <Real start="-1"/>
    </ScalarVariable>
    <ScalarVariable
        name="x1"
        valueReference="3"
        description="position right mass"
        variability="continuous"
        initial="exact"
        causality="local">
      <Real start="1"/>
    </ScalarVariable>
    <ScalarVariable
        name="v0"
        valueReference="4"
        description="velocity left mass"
        variability="continuous"
        initial="exact"
        causality="local">
      <Real start="0"/>
    </ScalarVariable>
    <ScalarVariable
        name="v1"
        valueReference="5"
        description="velocity right mass"
        variability="continuous"
        initial="exact"
        causality="local">
      <Real start="0"/>
    </ScalarVariable>

    <!-- Derivatives -->
    <ScalarVariable
        name="dx0"
        valueReference="6"
        description="change in position left mass"
        variability="continuous"
        derivative="2"
        initial="exact"
        causality="local">
      <Real start="0"/>
    </ScalarVariable>
    <ScalarVariable
        name="dx1"
        valueReference="7"
        description="change in position right mass"
        variability="continuous"
        derivative="3"
        initial="exact"
        causality="local">
      <Real start="0"/>
    </ScalarVariable>
    <ScalarVariable
        name="dv0"
        valueReference="8"
        description="change in velocity left mass"
        variability="continuous"
        derivative="4"
        initial="exact"
        causality="local">
      <Real start="0"/>
    </ScalarVariable>
    <ScalarVariable
        name="dv1"
        valueReference="9"
        description="change in velocity right mass"
        variability="continuous"
        derivative="5"
        initial="exact"
        causality="local">
      <Real start="0"/>
    </ScalarVariable>

    <!-- internal parameter -->
    <ScalarVariable
        name="k1"
        valueReference="10"
        description="spring constant spring on left mass"
        causality="parameter"
        variability="tunable"
        initial="exact">
      <Real start="0"/>
    </ScalarVariable>
    <ScalarVariable
        name="k2"
        valueReference="11"
        description="spring constant for spring between masses"
        causality="parameter"
        variability="fixed"
        initial="exact">
      <Real start="1"/>
    </ScalarVariable>

  </ModelVariables>
  <ModelStructure>
    <Outputs>
