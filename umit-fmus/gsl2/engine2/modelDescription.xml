<?xml version="1.0" encoding="UTF-8"?>
<fmiModelDescription
    fmiVersion="2.0"
    description="GSL engine with multiple coupling possibilities"
    modelName="engine2"
    guid="{cbbffdc6-77a2-4783-bdc5-e23a26787c3f}"
    numberOfEventIndicators="0">

  <CoSimulation
      modelIdentifier="engine2"
      canHandleVariableCommunicationStepSize="true"
      canGetAndSetFMUstate="true"
      providesDirectionalDerivative="true"/>

  <LogCategories>
    <Category name="logAll"/>
    <Category name="logError"/>
    <Category name="logFmiCall"/>
    <Category name="logEvent"/>
  </LogCategories>

  <DefaultExperiment startTime="0" stopTime="10" stepSize="0.1"/>

  <ModelVariables>
    <!-- outputs -->
    <ScalarVariable
        name="theta_out"
        valueReference="1"
        description="angle"
        causality="output">
      <Real />
    </ScalarVariable>
    <ScalarVariable
        name="omega_out"
        valueReference="2"
        description="angular velocity"
        causality="output">
      <Real />
    </ScalarVariable>
    <ScalarVariable
        name="alpha_out"
        valueReference="3"
        description="angular acceleration"
        causality="output">
      <Real />
    </ScalarVariable>
    <ScalarVariable
        name="tau_out"
        valueReference="4"
        description="output torque (from coupling spring)"
        causality="output">
      <Real />
    </ScalarVariable>

    <!-- inputs -->
    <ScalarVariable
        name="theta_in"
        valueReference="5"
        description="angle input (for coupling)"
        causality="input">
      <Real start="0"/>
    </ScalarVariable>
    <ScalarVariable
        name="omega_in"
        valueReference="6"
        description="angular velocity input (for coupling)"
        causality="input">
      <Real start="0"/>
    </ScalarVariable>
    <ScalarVariable
        name="tau_in"
        valueReference="7"
        description="coupling torque"
        causality="input">
      <Real start="0"/>
    </ScalarVariable>

    <!-- parameters -->
    <ScalarVariable
        name="theta0"
        valueReference="8"
        description="initial angle"
        causality="parameter"
        variability="fixed">
      <Real start="0"/>
    </ScalarVariable>
    <ScalarVariable
        name="omega0"
        valueReference="9"
        description="initial angular velocity"
        causality="parameter"
        variability="fixed">
      <Real start="0"/>
    </ScalarVariable>
    <ScalarVariable
        name="kp"
        valueReference="10"
        description="P controller gain"
        causality="parameter"
        variability="fixed">
      <Real start="20"/>
    </ScalarVariable>
    <ScalarVariable
        name="tau_max"
        valueReference="11"
        description="Maximum torque"
        causality="parameter"
        variability="fixed">
      <Real start="1350"/>
    </ScalarVariable>
    <ScalarVariable
        name="omega_target"
        valueReference="12"
        description="target angular velocity"
        causality="parameter"
        variability="fixed">
      <Real start="38.88888888888888888"/>
    </ScalarVariable>
    <ScalarVariable
        name="jinv"
        valueReference="13"
        description="inverse moment of inertia"
        causality="parameter"
        variability="fixed">
      <Real start="0.25"/>
    </ScalarVariable>
    <ScalarVariable
        name="k1"
        valueReference="14"
        description="drag coefficient (applied to omega)"
        causality="parameter"
        variability="fixed">
      <Real start="1"/>
    </ScalarVariable>
    <ScalarVariable
        name="k2"
        valueReference="15"
        description="drag coefficient (applied to omega*abs(omega))"
        causality="parameter"
        variability="fixed">
      <Real start="0.1"/>
    </ScalarVariable>
    <ScalarVariable
        name="k_in"
        valueReference="16"
        description="coupling spring constant"
        causality="parameter"
        variability="fixed">
      <Real start="0"/>
    </ScalarVariable>
    <ScalarVariable
        name="d_in"
        valueReference="17"
        description="coupling damping constant"
        causality="parameter"
        variability="fixed">
      <Real start="0"/>
    </ScalarVariable>
    <ScalarVariable
        name="integrate_dtheta"
        valueReference="18"
        description="derive substitute theta_in by integrating omega_in"
        causality="parameter"
        variability="fixed">
      <Boolean start="false"/>
    </ScalarVariable>

    <ScalarVariable
        name="filter_length"
        valueReference="98"
        description="Length of EPCE FIR filter (0 = disable)"
        causality="parameter"
        variability="fixed">
      <Integer start="0"/>
    </ScalarVariable>

    <ScalarVariable 
        name="octave_output"
        valueReference="1001"
        description="Dump integration data to a space separated value file?"
        causality="parameter"
        variability="fixed">
      <Boolean start="false"/>
    </ScalarVariable>

    <ScalarVariable 
        name="integrator"
        valueReference="1002"
        description="Choose integrator:
                     {
                     rk2,	/* 0 */
                     rk4,	/* 1 */
                     rkf45,	/* 2 */
                     rkck,	/* 3 */
                     rk8pd,	/* 4 */
                     rk1imp,	/* 5 */
                     rk2imp,	/* 6 */
                     rk4imp,	/* 7 */
                     bsimp,	/* 8 */
                     msadams,	/* 9 */
                     msbdf	/*10 */
                     };
                     "
        causality="parameter"
        variability="fixed">
      <Integer start="2"/>
    </ScalarVariable>
    <ScalarVariable 
        name="octave_output_file"
        valueReference="1003"
        description="file for internal dump?"
        causality="parameter"
        variability="fixed">
      <String start="engine2.m" size="500"/>
    </ScalarVariable>
    
  </ModelVariables>

  <ModelStructure>
    <Outputs>
      <Unknown index="1"/>
      <Unknown index="2"/>
      <Unknown index="3"/>
      <Unknown index="4"/>
    </Outputs>
    <Derivatives/>
    <DiscreteStates/>
    <InitialUnknowns />
  </ModelStructure>

</fmiModelDescription>
