<?xml version="1.0" encoding="UTF-8"?>
<fmiModelDescription
    fmiVersion="2.0"
    description="A two plates clutch with GSL integrator and
                 piecewise linear torque model.  Either plate can be
                 coupled to another module via force, velocity or
                 displacements.  In case of force-velocity couplings, the
                 position difference between this module and the coupled
                 one is estimated by integrating the velocity difference
                 internally."
    modelName="clutch"
    guid="{6985712a-2b8e-4ebb-9b6c-05d89b0ec1c8}"
    numberOfEventIndicators="0">

  <CoSimulation
      modelIdentifier="two plates clutch with piecewise linear force law"
      canHandleVariableCommunicationStepSize="true"
      canGetAndSetFMUstate="true"
      providesDirectionalDerivative="false"/>

  <LogCategories>
    <Category name="logAll"/>
    <Category name="logError"/>
    <Category name="logFmiCall"/>
    <Category name="logEvent"/>
  </LogCategories>

  <DefaultExperiment startTime="0" stopTime="10" stepSize="0.1"/>

  <ModelVariables>
    <!-- index="0"-->
    <ScalarVariable
        name="x0_e"               
        valueReference="0"  
        description="initial position of engine-side plate"                      
        causality="parameter" 
        variability="fixed">
      <Real start="0"/>
    </ScalarVariable>
    <!-- index="0"-->
    <ScalarVariable 
        name="v0_e"
        valueReference="1"  
        description="initial velocity of engine-side plate"                      
        causality="parameter"
        variability="fixed">
      <Real start="0"/>
    </ScalarVariable>
    <!-- index="0"-->
    <ScalarVariable 
        name="dx0_e"
        valueReference="2"
        description="initial angle difference engine-side coupling"
        causality="parameter" 
        variability="fixed">
      <Real start="0"/>
    </ScalarVariable>

    <!-- index="0"-->
    <ScalarVariable
        name="x0_s"               
        valueReference="3"  
        description="initial position of shaft-side plate"                      
        causality="parameter" 
        variability="fixed">
      <Real start="0"/>
    </ScalarVariable>
    <!-- index="0"-->
    <ScalarVariable 
        name="v0_s"
        valueReference="4"  
        description="initial velocity of shaft-side plate"                      
        causality="parameter"
        variability="fixed">
      <Real start="0"/>
    </ScalarVariable>
    <!-- index="0"-->
    <ScalarVariable 
        name="dx0_s"
        valueReference="5"
        description="initial angle difference shaft-side coupling"
        causality="parameter" 
        variability="fixed">
      <Real start="0"/>
    </ScalarVariable>

    
    <!-- coupling parameters -->

    <!-- index="0"-->
    <ScalarVariable 
        name="k_ec"             
        valueReference="6"  
        description="coupling spring engine side"
        causality="parameter" 
        variability="fixed">
      <Real start="0"/>
    </ScalarVariable>
    <!-- index="0"-->
    <ScalarVariable 
        name="gamma_ec"            
        valueReference="7"  
        description="coupling damping constant, engine side"         
        causality="parameter" 
        variability="fixed">
      <Real start="0"/>
    </ScalarVariable>
     <ScalarVariable 
        name="integrate_dx_e"            
        valueReference="7"  
        description="whether or not engine-side coupling angle difference is integrated"         
        causality="parameter" 
        variability="fixed">
      <Real start="0"/>
    </ScalarVariable>

    <!-- index="0"-->
    <ScalarVariable 
        name="k_sc"             
        valueReference="8"  
        description="coupling spring, shaft side"
        causality="parameter" 
        variability="fixed">
      <Real start="0"/>
    </ScalarVariable>
    <!-- index="0"-->
    <ScalarVariable 
        name="gamma_sc"            
        valueReference="9"  
        description="coupling damping constant, shaft side"         
        causality="parameter" 
        variability="fixed">
      <Real start="0"/>
    </ScalarVariable>   
    <ScalarVariable 
        name="integrate_dx_s"            
        valueReference="7"  
        description="whether or not shaft-side coupling angle difference is integrated"         
        causality="parameter" 
        variability="fixed">
      <Real start="0"/>
    </ScalarVariable>
    <!-- internal parameters -->

    <!-- index="0"-->
    <ScalarVariable 
        name="mass_e"             
        valueReference="10"  
        description="mass engine-side plate"                                  
        causality="parameter" 
        variability="fixed">
      <Real start="1"/>
    </ScalarVariable>
    <!-- index="0"-->
    <ScalarVariable 
        name="gamma_e"            
        valueReference="11"  
        description="damping constant, engine side"         
        causality="parameter" 
        variability="fixed">
      <Real start="1"/>
    </ScalarVariable>

    <!-- index="0"-->
    <ScalarVariable 
        name="mass_s"             
        valueReference="12"  
        description="mass shaft-side plate"                                  
        causality="parameter" 
        variability="fixed">
      <Real start="1"/>
    </ScalarVariable>
    <!-- index="0"-->
    <ScalarVariable 
        name="gamma_s"            
        valueReference="13"  
        description="damping constant, shaft-side"         
        causality="parameter" 
        variability="fixed">
      <Real start="1"/>
    </ScalarVariable>

    <!-- index="0"-->
    <ScalarVariable 
        name="clutch_damping"   
        valueReference="14"  
        description="internal clutch damping constant"      
        causality="parameter" 
        variability="fixed">
      <Real start="1"/>
    </ScalarVariable>


    <!-- inputs -->
    <!-- engine side inputs-->
    <!-- index="0"-->
    <ScalarVariable 
        name="x_in_e"
        valueReference="15"  
        description="external displacement engine-side"             
        causality="input" initial="exact">
      <Real start="0"/>
    </ScalarVariable>

    <!-- index="0"-->
    <ScalarVariable 
        name="v_in_e"
        valueReference="15"  
        description="external driving velocity engine-side"             
        causality="input" initial="exact">
      <Real start="0"/>
    </ScalarVariable>

    <!-- index="0"-->
    <ScalarVariable 
        name="force_in_e"         
        valueReference="16"  
        description="driving force, engine-side"
        causality="input" initial="exact">
      <Real start="0"/>
    </ScalarVariable>

    <!-- index="0"-->
    <ScalarVariable 
        name="force_in_ex"         
        valueReference="17"  
        description="additional driving force, engine-side"
        causality="input" initial="exact">
      <Real start="0"/>
    </ScalarVariable>

    <!-- shaft side inputs-->
    <!-- index="0"-->
    <ScalarVariable 
        name="x_in_s"
        valueReference="15"  
        description="external displacement shaft-side"             
        causality="input" initial="exact">
      <Real start="0"/>
    </ScalarVariable>
    <!-- index="0"-->
 <ScalarVariable 
        name="v_in_s"
        valueReference="18"  
        description="external driving velocity shaft-side"             
        causality="input" initial="exact">
      <Real start="0"/>
    </ScalarVariable>
    <!-- index="0"-->
    <ScalarVariable 
        name="force_in_s"         
        valueReference="19"  
        description="driving force, shaft-side"
        causality="input" initial="exact">
      <Real start="0"/>
    </ScalarVariable>

    <!-- index="0"-->
    <ScalarVariable 
        name="force_in_sx"         
        valueReference="20"  
        description="additional driving force, shaft-side"
        causality="input" initial="exact">
      <Real start="0"/>
    </ScalarVariable>

    <!-- index="0"-->
    <ScalarVariable 
        name="clutch_position"         
        valueReference="21"  
        description="how hard the clutch is engaged (only 0 or 1 for now)"
        causality="input" initial="exact">
      <Real start="0"/>
    </ScalarVariable>
    
    <!-- outputs -->

    <!-- engine side outputs -->
    <!-- index="0"-->
    <ScalarVariable 
        name="x_e"                
        valueReference="22"  
        description="position of engine-side plate"                              
        causality="output">
      <Real />
    </ScalarVariable>
    <!-- index="0"-->
    <ScalarVariable 
        name="v_e"                
        valueReference="23"  
        description="velocity of engine-side plate"
        causality="output">
      <Real />
    </ScalarVariable>
    <!-- index="0"-->
    <ScalarVariable 
        name="a_e"                
        valueReference="24"  
        description="acceleration of engine-side plate"
        causality="output">
      <Real />
    </ScalarVariable>
    <!-- index="0"-->
    <ScalarVariable 
        name="force_e"
        valueReference="25"  
        description="coupling torque of engine-side plate"
        causality="output">
      <Real />
    </ScalarVariable>
    <!-- shaft side outputs -->
    <!-- index="0"-->
    <ScalarVariable 
        name="x_s"                
        valueReference="26"  
        description="position of shaft-side plate"                              
        causality="output">
      <Real />
    </ScalarVariable>
    <!-- index="0"-->
    <ScalarVariable 
        name="v_s"
        valueReference="27"  
        description="velocity of shaft-side plate"
        causality="output">
      <Real />
    </ScalarVariable>
    <!-- index="0"-->
    <ScalarVariable 
        name="a_s"                
        valueReference="28"  
        description="acceleration of shaft-side plate"
        causality="output">
      <Real />
    </ScalarVariable>
    <!-- index="0"-->
    <ScalarVariable 
        name="force_s"
        valueReference="29"  
        description="coupling torque of shaft-side plate"
        causality="output">
      <Real />
    </ScalarVariable>

    <!-- index="0"-->
    <ScalarVariable 
        name="filter_length"
        valueReference="98"
        description="Length of EPCE FIR filter (0 = disable)"
        causality="parameter"
        variability="fixed">
      <Integer start="0"/>
    </ScalarVariable>

    
  </ModelVariables>



  
  <ModelStructure>
    <Outputs>
      <Unknown index="10"/>
      <Unknown index="11"/>
    </Outputs>
    <Derivatives/>
    <DiscreteStates/>
    <InitialUnknowns />
  </ModelStructure>

</fmiModelDescription>
